<div>
</div>


<div class="row">
    <% @todos.each do |todo| %>
      <% if todo.completed == true %>
        <% @completed_todos << todo %>
      <% else %>
        <% @incomplete_todos << todo %>
      <% end %>
    <% end %>

  <div class="col-md-6">
    <h1>Incomplete ToDo's</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>To do</th>
          <th>Created at</th>
          <th>Started</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @incomplete_todos.each do |todo| %>
            <td><%= todo.description %></td>
            <td><%= todo.created_at %></td>
            <td><%= distance_of_time_in_words(Time.now - todo.created_at)+" ago" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-6">
    <h1>Completed ToDo's</h1>  
    <table class="table table-hover">
      <thead>
        <tr>
          <th>To do</th>
          <th>Created at</th>
          <th>Completed on</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @completed_todos.each do |todo| %>
            <td><%= todo.description %></td>
            <td><%= todo.created_at %></td>
            <td><%= todo.updated_at %></td>
          </tr>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>