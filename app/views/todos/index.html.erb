
<p><%= link_to "Crear un ToDo", todos_new_path %></p>

<table class="table table-well">
  <thead>
    <tr>
      <th>To do</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
      <% if todo.completed == true%>
        <% @status = "Completed"%>
      <% else %>
        <% @status = "In progress..." %>
      <% end %>

      <tr>
        <td><%= todo.description %></td>
        <td><%= @status %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_path(todo) %></td>
      </tr>
    <% end %>
  </tbody>
</table>