<div class="container">
  <div class="row">
    <h1>Creating a new To Do</h1>
    <%= link_to "Go back?", todos_path, class:"btn btn-warning" %>
  </div>
  <div class="col-md-4 col-md-offset-2">
    <%= form_with model: @todo, local: true do |f| %>
      <%= f.label :description, "To-do description" %>
      <%= f.text_field :description, class:"form form-control" %>
      <br>
      <%= f.label :completed, "Is the task completed?" %>
      <%= f.check_box :completed %>
      <br>
      <%= f.submit "Save it!", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>