  <div class="row">
    <div class="container">
      <div class="container">
        <h1 class="col-md-6 col-md-offset-1">Creating a new To Do?</h1>
      </div>
    </div>
  <div class="row">
    <div class=" container col-md-4 col-md-offset-2">
      <%= form_with model: @todo, local: true do |f| %>
        <%= f.label :description, "Enter a description below" %>
        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
        <%= f.text_field :description, class:"form form-control", placeholder:"Here! That's right champ!" %>
        <br>
        <%= f.label :completed, "Is the task completed?" %>
        <%= f.check_box :completed %>
        <br>
        <%= f.submit "Save it!", class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
