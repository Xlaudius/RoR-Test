<div class="row">
  <div class="container list-container">
      <% @todos.each do |todo| %>
        <% if todo.completed == true %>
          <% @completed_todos << todo %>
        <% else %>
          <% @incomplete_todos << todo %>
        <% end %>
      <% end %>

    <div class="container col-md-6 ">
      <h1>Incomplete ToDo's</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>To do</th>
            <th>Started on</th>
            <th>Started</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @incomplete_todos.each do |todo| %>
              <% t = todo.created_at %>
              <td><%= todo.description %></td>
              <td><%= t.strftime("%d/%m/%Y") %></td>
              <td><%= distance_of_time_in_words(Time.now - todo.created_at)+" ago" %></td>
              <td><%=  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      <h1>Completed ToDo's</h1>  
      <table class="table table-hover">
        <thead>
          <tr>
            <th>To do</th>
            <th>Created on</th>
            <th>Completed</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @completed_todos.each do |todo| %>
              <% t = todo.created_at %>
              <td><%= todo.description %></td>
              <td><%= t.strftime("%d/%m/%Y") %></td>
              <td><%= distance_of_time_in_words(Time.now - todo.updated_at)+" ago" %></td>
            </tr>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>